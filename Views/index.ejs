    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <title>WPL Assignment - 3(SXM220015)</title>
</head>
<body>
    <div style="padding-left: 10px; background-color: #D3D3D3;">
        <a href ="/games">Home</a>
        <h1> Arcade</h1>
        <p> This is the list of available Games.</p>
        <a href="/games/new" class="btn btn-primary" style="margin-left: 30px;">Add new game</a>
        <form class="mt-4" method ="GET" action="/games/search">
            <div class="form-row">
                <div class="col-md-2 form-group">
                    <input type="text" id="name_game" name="title" class="form-control" placeholder="<%= title ? title : 'name' %>">
                </div>
                <div class="col-md-2 form-group">
                    
                    <select id="type_game" name="type" class="form-control">
                        <option value="" <%= type === '' ? 'selected' : '' %>>No Filter</option>
                        <option value="Physical" <%= type === 'Physical' ? 'selected' : '' %>>Physical</option>
                        <option value="Table Game" <%= type === 'Table Game' ? 'selected' : '' %>>Table Game</option>
                        <option value="Virtual Reality" <%= type === 'Virtual Reality' ? 'selected' : '' %>>Virtual Reality</option>
                        <option value="Interactive" <%= type === 'Interactive' ? 'selected' : '' %>>Interactive</option>
                    </select>
                    <!-- <select id="type_game" name="type" class="form-control">
                        <option value="No filter">No Filter</option>
                        <option value="Physical">Physical</option>
                        <option value="Table Game">Table Game</option>
                        <option value="Virtual Reality">Virtual Reality</option>
                        <option value="Interactive">Interactive</option>
                    </select> -->
                </div>
                <div class="col-md-1 form-group">
                    <button type="submit" class="btn btn-primary btn-block" id="searchbutton">Search</button>
                </div>
                
            </div>
        </form>
    </div>
    <!-- For Images -->

    <div id="forimages"class="row" style="margin-left: 20px;margin-top:20px;  align-items: center;">
        <% games.forEach(game => { %>
            <div class="col-md-2" style="margin-right:10px">
                <div style="height:202px;width:202px;border-radius: 2%;border: 2px solid #D3D3D3;">
                <img src="/<%= game.image.path %>" alt="<%= game.image.description %>" id="gameImage"style="height:200px;width:200px; padding:3px;">
                </div>
                <p><a href="/games/<%= game.id %>"><%= game.name %></a></p>
            </div>
        <% }); %>
    </div>
    
</body>

</html>